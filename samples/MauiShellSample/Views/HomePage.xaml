<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiShellMvvmExample.HomePage"
             Title="HomePage"
             BackgroundColor="White">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Shell home page" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
        <Label Text="{Binding Test}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <Button Text="Open details view" WidthRequest="200" HorizontalOptions="Center" Command="{Binding ChangeMessageCmd}"></Button>
    </StackLayout>
</ContentPage>